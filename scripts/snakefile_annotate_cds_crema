species = ['crema']

chunk = [str(x).zfill(2) for x in range(1,21)]

rule all:
	input:
		cds='annotations/crema/crema.final.raw.transdecoder.cds',
		gff='annotations/crema/crema.final.raw.transdecoder.gff3',
		pep='annotations/crema/crema.final.raw.transdecoder.pep'
	shell:  'rm -f -r pipeliner* snakejob* *longest_isoform*'

rule longest_isoform:
        input:
              	 'annotations/{species}/{species}.Trinity.fasta'
        output:
               	 'annotations/{species}/{species}.longest_isoform.fasta'
        conda:   '../env/trinity.yaml'
        shell:   'perl /gpfs/home/projects/gen_red/cartella/env/paint/opt/trinity-2.8.5/util/misc/get_longest_isoform_seq_per_trinity_gene.pl {input} > {output}'

rule split_fasta:
	input:
		 rules.longest_isoform.output
	output:
                 expand('annotations/{{species}}/{{species}}.longest_isoform.part-{chunk}.fasta', species = species, chunk = chunk)
	conda:   '../env/pyfasta.yaml'
	shell:   'fasta-splitter -n-parts 20 --out-dir annotations/crema/ {input}'

rule transdecoder_longorfs:
	input:
		 'annotations/{species}/{species}.longest_isoform.part-{chunk}.fasta'
	output:
		 'annotations/{species}/{species}.longest_isoform.{chunk}.fasta.transdecoder_dir/longest_orfs.pep'
	params:
		 basename='annotations/{species}/{species}.longest_isoform.{chunk}.fasta.transdecoder_dir'
	conda:   '../env/transdecoder.yaml'
	shell:   'TransDecoder.LongOrfs -t {input} --output_dir {params.basename}'

rule hmmscan:
	input:
		 'annotations/{species}/{species}.longest_isoform.{chunk}.fasta.transdecoder_dir/longest_orfs.pep'
	output:
		 'annotations/{species}/{species}.longest_isoform.{chunk}.fasta.transdecoder_dir/{chunk}.pfam.domtblout'
	threads: 10
	conda:   '../env/hmmscan.yaml'
	shell:   'hmmscan --cpu {threads} --domtblout {output} dbs/pfam/Pfam-A.hmm {input}'

rule blastp:
	input:
		 'annotations/{species}/{species}.longest_isoform.{chunk}.fasta.transdecoder_dir/longest_orfs.pep'
	output:
		 'annotations/{species}/{species}.longest_isoform.{chunk}.fasta.transdecoder_dir/{chunk}.blastp.outfmt6'
	threads: 10
	conda:   '../env/blast.yaml'
	shell:   'blastp -query {input} -db dbs/uniref90/uniref90.fasta -max_target_seqs 1 -outfmt 6 -evalue 1e-5 -num_threads {threads} > {output}'

rule cp_chunk:
	input:
		 'annotations/{species}/{species}.longest_isoform.part-{chunk}.fasta'
	output:
		 'annotations/{species}/{species}.longest_isoform.{chunk}.fasta.transdecoder_dir/{species}.longest_isoform.{chunk}.fasta'
	shell:   'cp {input} {output}'

rule transdecoder_predict:
	input:
		 assembly = rules.cp_chunk.output,
		 blast    = rules.blastp.output,
		 hmmscan  = rules.hmmscan.output
	output:
		 cds='annotations/{species}/{species}.longest_isoform.{chunk}.fasta.transdecoder_dir/{species}.longest_isoform.{chunk}.fasta.transdecoder.cds',
		 gff='annotations/{species}/{species}.longest_isoform.{chunk}.fasta.transdecoder_dir/{species}.longest_isoform.{chunk}.fasta.transdecoder.gff3',
		 pep='annotations/{species}/{species}.longest_isoform.{chunk}.fasta.transdecoder_dir/{species}.longest_isoform.{chunk}.fasta.transdecoder.pep'
	params:
		 basename='annotations/{species}/{species}.longest_isoform.{chunk}.fasta.transdecoder_dir'
	conda:   '../env/transdecoder.yaml'
	shell:   'TransDecoder.Predict -t {input.assembly} --retain_pfam_hits {input.hmmscan} --retain_blastp_hits {input.blast} --single_best_only --output_dir {params.basename}'

rule merge_cds:
	input: 
		  expand('annotations/{{species}}/{{species}}.longest_isoform.{chunk}.fasta.transdecoder_dir/{{species}}.longest_isoform.{chunk}.fasta.transdecoder.cds', chunk = chunk)
	output:
		  'annotations/{species}/{species}.final.raw.transdecoder.cds'
	shell:    'cat {input} >> {output}'

rule merge_gff:
        input:                                                                            
              	  expand('annotations/{{species}}/{{species}}.longest_isoform.{chunk}.fasta.transdecoder_dir/{{species}}.longest_isoform.{chunk}.fasta.transdecoder.gff3', chunk = chunk)
        output:
                  'annotations/{species}/{species}.final.raw.transdecoder.gff3'
        shell:	  'cat {input} >> {output}'

rule merge_pep:
        input:
              	  expand('annotations/{{species}}/{{species}}.longest_isoform.{chunk}.fasta.transdecoder_dir/{{species}}.longest_isoform.{chunk}.fasta.transdecoder.pep', chunk = chunk)
        output:
               	  'annotations/{species}/{species}.final.raw.transdecoder.pep'
        shell:    'cat {input} >> {output}'
